@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager




<div class="d-flex align-items-center justify-content-between">
    @if (SignInManager.IsSignedIn(User))
    {


        <div class="pe-3">
            <a asp-controller="Account" asp-action="Profile">@UserManager.GetUserName(User) Profile</a>
        </div>


        <div>
            <a asp-controller="Authentication" asp-action="Logout">Logout</a>
        </div>

        <div class="icons">
            <div class="fas fa-user" id="login-btn"></div>
        </div>


    }
    else
    {
        <div class="pe-3">
            <a class="btn-main btn-main-fill id="register" asp-controller="Authentication" asp-action="Register">Register</a>
        </div>
        <div class="pe-3">
            <a class="btn-main btn-main-fill id="register" asp-controller="Authentication" asp-action="RegisterStaff">Register Staff</a>
        </div>

        <div class="">
            <a class="btn-main btn-main-outline" id="login" asp-controller="Authentication" asp-action="Login">Login</a>

        </div>
    }
    </>
