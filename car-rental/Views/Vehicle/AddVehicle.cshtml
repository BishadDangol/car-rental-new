@using car_rental.domain.Entities;
@model Vehicle



<section id="products" class="my-5 pb-5">
    <div class="container text-center mt-5 py-5">
        <h2>Register Form</h2>
    </div>
    <div class="row">
        <div class="col-md-6 order-md-1">
            <form method="POST" asp-controller="Vehicle" asp-action="AddVehicle" enctype="multipart/form-data">

                <div class="mb-3">
                    <label asp-for="@Model.Name" class="form-label"></label>
                    <input asp-for="@Model.Name" type="text" class="form-control" id="exampleFormControlInput1" placeholder="Enter name of car">
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Description" class="form-label"></label>
                    <input asp-for="@Model.Description" type="text" class="form-control" id="exampleFormControlInput1" placeholder="Type description here...">
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Color" class="form-label"></label>
                    <input asp-for="@Model.Color" type="text" class="form-control" id="exampleFormControlInput1" placeholder="Type Car Color here..." />
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Brand" class="form-label"></label>
                    <input asp-for="@Model.Brand" type="text" class="form-control" id="exampleFormControlInput1" placeholder="Type Car Brand here...">
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Rate" class="form-label"></label>
                    <input asp-for="@Model.Rate" type="number" class="form-control" id="exampleFormControlInput1" placeholder="Type Car Rate here...">
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.PhotoUrl " class="form-label"></label>
                    <input asp-for="@Model.PhotoUrl" type="file" class="form-control" id="exampleFormControlInput1" placeholder="Select an image">
                </div>

                <button type="submit" class="btn btn-primary">Submit</button>
            </form>

        </div>
    </div>
</section>